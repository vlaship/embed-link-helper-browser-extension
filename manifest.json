{
  "manifest_version": 2,
  "name": "Embed Link Helper",
  "version": "1.0.0",
  "description": "Adds redirect buttons to Twitter/X and Instagram pages for quick access to alternative hostnames",
  "permissions": [
    "storage",
    "activeTab",
    "*://x.com/*",
    "*://www.instagram.com/*"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "background/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://x.com/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "utils/logger.js",
        "utils/dom-utils.js",
        "utils/post-detector.js",
        "utils/post-url-extractor.js",
        "utils/url-transformer.js",
        "utils/per-post-button.js",
        "utils/button-injector.js",
        "utils/post-registry.js",
        "content/twitter-content.js"
      ],
      "css": [
        "utils/button-styles.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://www.instagram.com/*"
      ],
      "js": [
        "lib/browser-polyfill.js",
        "utils/logger.js",
        "utils/dom-utils.js",
        "utils/post-detector.js",
        "utils/post-url-extractor.js",
        "utils/url-transformer.js",
        "utils/per-post-button.js",
        "utils/button-injector.js",
        "utils/post-registry.js",
        "content/instagram-content.js"
      ],
      "css": [
        "utils/button-styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "embed-link-helper@example.com",
      "strict_min_version": "57.0"
    }
  }
}
