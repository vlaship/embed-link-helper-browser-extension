{
  "manifest_version": 3,
  "name": "Social Media Redirector",
  "version": "1.0.0",
  "description": "Adds redirect buttons to Twitter/X and Instagram pages for quick access to alternative hostnames",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://x.com/*",
    "*://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*"],
      "js": ["lib/browser-polyfill.js", "content/twitter-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.instagram.com/*"],
      "js": ["lib/browser-polyfill.js", "content/instagram-content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "social-media-redirector@example.com",
      "strict_min_version": "109.0"
    }
  }
}
